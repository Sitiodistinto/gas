  <!-- Main row -->
  <div class="row">
    <!-- Left col -->
    <div class="col-lg-6 col-xs-12">
      <div class="box box-warning">
        <div class="box-header with-border">
          <h3 class="box-title"><%= t('.sign_up') %></h3>
          <div class="box-tools pull-right">
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <p>Registra tus datos para activar la cuenta. 
             <%= t('devise.confirmations.send_instructions') %></p><br>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group field">
              <%= f.text_field :name, placeholder: t('activerecord.attributes.user.name'), autofocus: true, class: "form-control", required: true %>
            </div>

            <div class="form-group field">
              <%= f.email_field :email, placeholder: t('activerecord.attributes.user.email'), autofocus: true, class: "form-control", required: true %>
            </div>

            <div class="form-group field">
              <%= f.password_field :password, placeholder: t('activerecord.attributes.user.password'), autocomplete: "off", class: "form-control", required: true %>
            </div>

            <div class="form-group field">
              <%= f.password_field :password_confirmation, placeholder: t('activerecord.attributes.user.password_confirmation'), autocomplete: "off", class: "form-control", required: true %>
            </div>

            <div class="actions">
              <%= f.submit t('.sign_up'), class: 'btn btn-success btn-flat' %>
            </div>
          <% end %>

        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
          <%= render "devise/shared/links" %>
        </div>
      <!-- /.box-footer -->
      </div>
    <!-- /.box -->
    </div>
  <!-- /.col -->
  </div>
