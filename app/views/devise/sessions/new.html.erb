  <!-- Main row -->
  <div class="row">
    <!-- Left col -->
    <div class="col-md-12">
      <div class="box box-warning">
        <div class="box-header with-border">
          <h3 class="box-title"><%= t('.sign_in') %></h3>
          <div class="box-tools pull-right">
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group field">
              <%= f.email_field :email, placeholder: t('activerecord.attributes.user.email'), autofocus: true, class: "form-control", required: true %>
            </div>

            <div class="form-group field">
              <%= f.password_field :password, placeholder: t('activerecord.attributes.user.password'), autocomplete: "off", class: "form-control", required: true %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit t('.sign_in'), class: 'btn btn-success btn-flat' %>
            </div>
          <% end %>

        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
          <%= render "devise/shared/links" %>
        </div>
      <!-- /.box-footer -->
      </div>
    <!-- /.box -->
    </div>
  <!-- /.col -->
  </div>
